<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kjjk"
    tools:context=".Notices.printNotice">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/notice3"
        android:layout_height="400dp">

        <TextView
            android:id="@+id/printTitle"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:layout_marginStart="40dp"
            android:text="Subject: Szkoła"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.722">

        </TextView>

        <TextView
            android:id="@+id/printSubject"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginEnd="28dp"
            android:text="Subject: Szkoła"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.722">

        </TextView>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="303dp"
            android:layout_height="233dp"
            android:layout_margin="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9">

            <EditText
                android:id="@+id/printText"
                android:layout_width="match_parent"
                android:autoLink="all"

                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:textSize="20sp" />

        </ScrollView>

        <ImageView
            android:id="@+id/saveNotice"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/save">

        </ImageView>

        <ImageView
            android:id="@+id/deleteNotice"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/delete3">

        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>