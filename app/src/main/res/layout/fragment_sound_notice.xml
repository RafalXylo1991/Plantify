<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Notices.noticeTypes.sound.soundNotice"
    android:orientation="vertical"
    >





           <TextView
               android:id="@+id/time"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

           </TextView>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/startRec"
        android:layout_width="100dp"

        android:layout_margin="20dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/startrecord"></ImageView>
    <ImageView
        android:visibility="gone"
        android:id="@+id/stopRec"
        android:layout_width="50dp"
        android:layout_gravity="center"

        android:layout_height="50dp"
        app:srcCompat="@drawable/stoprecord"></ImageView>

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/startPlay"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_margin="20dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/play"></ImageView>
        <ImageView
            android:visibility="gone"
            android:id="@+id/stopPlay"
            android:layout_width="50dp"
            android:layout_gravity="center"

            android:layout_height="50dp"
            app:srcCompat="@drawable/stoprecord"></ImageView>

    </LinearLayout>




</LinearLayout>